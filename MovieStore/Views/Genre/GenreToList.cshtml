@model IEnumerable<MovieStore.Models.Database.Genre>
@{
    Layout = "_Layout";
}

<div class="tbl-container">
    <h2>Movies</h2>

    <div class="input-container">
        <a href="/Genre/Add" class="btn btn-sec" style="padding:12px 16px">
            <i class="fa fa-plus-square-o" style="margin-right: 10px"></i>Add Genre
        </a>
    </div>

    <table>
        <tr>
            <th>Genre</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GenreName</td>
                <td>
                    <a href="/Genre/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a href="/Genre/Delete?id=@item.Id" onclick="return window.confirm('Are you sure want to delete?')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>
</div>