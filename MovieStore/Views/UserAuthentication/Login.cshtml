@model MovieStore.Models.Identity.LoginModel
@{
    Layout = "_Layout";
}

<style>
    .input-container a {
        color:hotpink;
        margin-left: 30px;
        padding: 10px 0px;
    }

    .input-container a:hover {
        color: red;
    }
</style>

<form class="w-40" asp-action="Login" method="post">
    <h1 class="pb-10">Login</h1>
    <div class="input-container">
        <label class="w-40">Username</label>
        <input type="text" class="input" asp-for="Username">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>

    <div class="input-container">
        <label class="w-40">Password</label>
        <input type="password" class="input" asp-for="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Login</button>
        <a href="/UserAuthentication/Register">Don't have account! Click here to register</a>
    </div>
</form>
